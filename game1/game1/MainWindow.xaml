<Window x:Class="game1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:game1"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="500">
    <Grid RenderTransformOrigin="0.511,0.498">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBox Text="{Binding Val, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="50"/>
        <!--<Image Source="d:\\1.gif" Grid.Row="1"/>-->
        <MediaElement Source="d:\\1.gif" Grid.Row="1"/>
    </Grid>
</Window>
